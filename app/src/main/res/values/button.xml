<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.H4</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="DefaultButton.Dark" parent="DefaultButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Dark</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button.Dark" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>