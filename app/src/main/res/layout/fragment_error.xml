<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:background="@color/white"
        android:id="@+id/error_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmptyFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:paddingVertical="@dimen/spacing_md">

            <ImageView
                android:id="@+id/graphic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/info_network" />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.H1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textAlignment="center"
                tools:text="Đã có lỗi xảy ra\nVui lòng thử lại sau!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="Thử lại" />
        </LinearLayout>
    </FrameLayout>
</layout>