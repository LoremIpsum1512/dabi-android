<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErrorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/spacing_md"
        android:paddingHorizontal="@dimen/spacing_lg">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@drawable/info_network" />

        <TextView
            style="@style/TextAppearance.H1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textAlignment="center"
            tools:text="Đã có lỗi xảy ra\nVui lòng thử lại sau!" />

        <com.google.android.material.button.MaterialButton

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="Try again" />
    </LinearLayout>
</FrameLayout>